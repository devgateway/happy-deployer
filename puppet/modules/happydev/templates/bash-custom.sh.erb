# /etc/profile.d/custom.sh

if [ "$PS1" ]; then
  if [[ $EUID -ne 0 ]]; then
    # You are not root, the prompt should be yellow
    PS1="\[\033[01;33m\]\u@\h\[\033[00m\]:\W\\$ "
  else
    # You are root, the prompt should be red
    PS1="\[\033[01;31m\]\u@\h\[\033[00m\]:\W\\$ "
  fi
fi

# Define custom aliases.
alias cdw='cd /var/www; pwd'
alias cdp='cd <%= @project_docroot %>; pwd'
